<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity"
    android:background="#F3F3F3"
    >

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignTop="@+id/text_name"
        android:layout_alignBottom="@+id/text_name"
        android:layout_toRightOf="@+id/text_name"
        android:background="#FFFFFF"
        android:ems="13" />

    <EditText
        android:id="@+id/edit_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker"
        android:layout_alignBottom="@+id/text_memo"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/text_memo"
        android:background="#FFFFFF"
        android:ems="13" />

    <TextView
        android:id="@+id/text_memo"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_below="@+id/text_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="388dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="  메모: "
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintLeft_toRightOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70sp"
        android:text="  상품명: "
        android:textSize="20sp"
        android:gravity="center"
        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="  날짜 선택"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="520sp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonshape"
        android:text="저장"
        android:textColor="#FFFFFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:background="@drawable/buttonshape2"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/input_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="물품 등록"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textSize="17dp"
        />

    <DatePicker

        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/date"
        android:background="#FFFFFF"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />


</RelativeLayout>